<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:key="notifications_category"
        app:title="Notifications">

        <SwitchPreferenceCompat
            app:key="notifications"
            app:title="Enable notifications"
            app:defaultValue="true"/>

        <SwitchPreferenceCompat
            app:key="vibrate"
            app:title="Vibrate"
            app:dependency="notifications"
            app:summary="vibrate on new notification"
            app:defaultValue="true"/>

        <Preference
            app:key="ringtone"
            app:title="Notification Tone"
            app:dependency="notifications"/>

        <SwitchPreferenceCompat
            app:key="fullscreen"
            app:dependency="notifications"
            app:title="Fullscreen notification"
            app:summary="Enable fullscreen notification"
            app:defaultValue="false"/>

    </PreferenceCategory>

    <PreferenceCategory
        app:key="call_category"
        app:title="Call">

        <SwitchPreferenceCompat
            app:key="call"
            app:summary="For call tasks reminder, Choose whether to make call directly or go to dialer"
            app:title="Direct Call"
            app:defaultValue="false"/>

    </PreferenceCategory>

    <PreferenceCategory
        app:key="storage_category"
        app:title="Storage">

        <Preference
            app:key="clear"
            app:summary="Clear all saved task, This action cannot be undone"
            app:title="Clear All Tasks"
            />

        <SwitchPreferenceCompat
            app:title="Cancel pending notifications"
            app:summary="if you don't want to receive notification for the task already scheduled after clearing all the tasks"
            app:key="cancel_notification"/>

    </PreferenceCategory>

</PreferenceScreen>